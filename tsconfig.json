{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "lib": ["ES2022"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node", "mocha", "chai"]
  },
  "include": [
    "hardhat.config.ts",
    "scripts/**/*.ts",
    "test/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": ["node_modules", "artifacts", "cache", "cache_hardhat", "dist"]
}
